<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#506E7E">

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="4dp"
        android:top="2dp">
        <shape>
            <solid android:color="@color/ic_launcher_background" />
            <corners android:radius="20dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:right="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#0D1517"
                android:startColor="@color/lightBrown" />
            <corners android:radius="20dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</ripple>